<header>
  <h1>face</h1>
  <h1 class="italicized">forward</h1>
  </h1>
</header>

  <div class="index-main">

    <div class="index-content">
      
      <div class="index-forms-div">

        <div class="index-btn-div">
          <button class="index-btn" id="signup-tab" onclick="switchForms('signup', 'signup-tab', 'index')">Register</button>
          <button class="index-btn" id="signin-tab" onclick="switchForms('signin', 'signin-tab', 'index')">Connect</button>
        </div>

        <form id="signin" class="index-form" name="signin" method="post" action="/signin">
          <h4>Welcome Back!</h4>

          <label for="username">Username:</label>
          <input class="underlined-input" name="username" type="text" />


          <label for="password">Password:</label>
          <input class="underlined-input" name="password" type="password" />


          <input id="signin-btn" class="form-btn" type="submit" value="Sign In" />
        </form>


        <form id="signup" class="index-form" name="signup" method="post" action="/signup">
          <h4>Sign Up</h4>

          <p>(all fields required)</p>
          <label for="username">Username:</label>
          <input class="underlined-input" id="username-input" name="username" type="text" />


          <label for="firstname">First Name:</label>
          <input class="underlined-input" id="firstname" name="firstname" type="text" />


          <label for="lastname">Last Name:</label>
          <input class="underlined-input" id="lastname" name="lastname" type="text" />


          <label for="email">Email:</label>
          <input class="underlined-input" id="email-input" name="email" type="text" />


          <label for="password">Password:</label>
          <input class="underlined-input" id="password-input" name="password" type="password" />


          <input id="signup-btn" class="form-btn" type="submit" value="Sign Up" />
        </form>
      </div>

    </div>

  </div>